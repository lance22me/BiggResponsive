    <script src="~/Components/lodash/lodash.js"></script>

    <!-- modules -->

    <script src="~/Scripts/app.module.js"></script>
    <script src="~/Scripts/controllers/controllers.module.js"></script>
    <script src="~/Scripts/directives/directives.module.js"></script>
    <script src="~/Scripts/factories/factories.module.js"></script>
    <script src="~/Scripts/filters/filters.module.js"></script>
    <script src="~/Scripts/services/services.module.js"></script>

    <script src="~/Scripts/app.routes.js"></script>

