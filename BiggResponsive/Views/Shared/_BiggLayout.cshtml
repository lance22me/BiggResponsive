@using System.Web.Optimization
<!DOCTYPE html>
<html lang="en" ng-app="biggstuff">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>

    <link href="~/components/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/components/bootstrap/themes/Cyborg.css" rel="stylesheet" /> <!-- Cyborg.css, Flatly.css, Darkly.css, United.css, SpaceLab.css -->

    <link href="~/Components/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/Styles/BiggResponsive.css" rel="stylesheet" />

    <script src="~/components/jquery/jquery-2.1.3.js"></script>
    <script src="~/components/bootstrap/js/bootstrap.min.js"></script>

    <!-- MORE (angular) AT BOTTOM -->
</head>

<body ng-controller="BaseCtrl as base">

     <div class="container wrapper">

         <bigg-menu ng-cloak></bigg-menu>
        <div loading-overlay></div>
        @RenderBody()
        <div class="TopCushion"><!-- footer --></div>

     </div><!-- end container -->

    <!-- in a real app, would have a bundler, scripts would be exposed only give certain routes in use -->

    <!-- the base libraries -->
