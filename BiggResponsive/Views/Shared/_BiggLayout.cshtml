    <!-- factories -->

    <script src="~/Scripts/factories/cartFactory.js"></script>
    <script src="~/Scripts/factories/localStorage.js"></script>

    <!-- services -->

    <script src="~/Scripts/services/CardService.js"></script>
    <script src="~/Scripts/services/PersonService.js"></script>
    <script src="~/Scripts/services/ContactService.js"></script>
    <script src="~/Scripts/services/GroupService.js"></script>
    <script src="~/Scripts/services/ProductService.js"></script>

    <!-- filters -->

    <script src="~/Scripts/filters/selectedTagsFilter.js"></script>

    <!-- base controllers -->

    <script src="~/Scripts/controllers/BaseController.js"></script>
    <script src="~/Scripts/controllers/HomeController.js"></script>

