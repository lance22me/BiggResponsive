<h2>{{vm.header2}}</h2>

<div class="row-fluid TopCushion">

    <div class="btn-group btn-group-justified" role="group" aria-label="...">
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-default" ng-click="vm.getFirstById(190)">First person w ID of 190</button>
      </div>
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-default" ng-click="vm.getFirstByProfileImage('NoImage.jpg')">First person w no profile photo</button>
      </div>
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-default" ng-click="vm.getFirstByLastName('Uemura')">First person w last name 'Uemura'</button>
      </div>
    </div>

</div>


<div class="row-fluid TopCushion">

    <div class="media" ng-show="vm.people.lastName.length > 1">
      <div class="media-left">
        <a href="#">
          <img class="media-object thumbnail" ng-src="{{vm.people.profileImage}}" alt="{{vm.people.firstName}} {{vm.people.lastName}}">
        </a>
      </div>
      <div class="media-body">
        <h4 class="media-heading">{{vm.people.firstName}} {{vm.people.lastName}}</h4>

      </div>
    </div>   

</div>

