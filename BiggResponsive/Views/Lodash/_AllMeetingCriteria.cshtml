<h2>{{vm.header2}}</h2>

<div class="row-fluid TopCushion">

    <div class="btn-group btn-group-justified" role="group" aria-label="...">
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-default" ng-click="vm.getByMatch({city: 'Duluth'})">Everyone in Duluth, MN</button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-default" ng-click="vm.removeByMatch({state: 'MN'})">Everyone NOT in MN</button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-default" ng-click="vm.getLastNameContains('shi')">Last Names containing 'shi'</button>
        </div>
    </div>


    <div class="row-fluid">

        <div class="col-sm-3 TopCushion" ng-show="vm.people.length > 0" ng-repeat="item in vm.people">
            <div>
                <img class="caption-image thumbnail" ng-src="{{item.profileImage}}" alt="{{item.firstName}} {{item.lastName}}">
                <div class="caption">
                    <p>{{item.firstName}} {{item.lastName}}<br/>
                    {{item.city}}, {{item.state}}</p>
                </div>
            </div>
        </div>

    </div>

</div>