<h2>{{vm.header2}}</h2>

<div class="row-fluid">

    <div class="btn-group btn-group-justified" role="group" aria-label="...">
      <div class="btn-group" role="group">
          <button type="button" class="btn btn-default" ng-click="vm.getSingleDynamic({isJoker:true, returnField: 'suitColor'})">Suit Color of 1st of two Jokers</button>
      </div>
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-default" ng-click="vm.getSinglePropertyAll('displayName')">Display Name for Every Card</button>
      </div>
      <div class="btn-group" role="group">
          <button type="button" class="btn btn-default" ng-click="vm.getSingleDynamic({displayName:'Ace of Hearts', returnField: 'tags'})">'Tags' for Ace of Hearts</button>
      </div>
    </div>

</div>

<div class="row-fluid TopCushion" ng-hide="vm.resultValue.length===0">
    <p class="bg-primary" style="padding:4px 4px">{{vm.resultValue}}</p>
</div>