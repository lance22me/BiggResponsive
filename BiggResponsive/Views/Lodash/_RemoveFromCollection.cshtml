<h2>{{vm.header2}}</h2>

<div class="row-fluid TopCushion">

    <div class="btn-group btn-group-justified" role="group" aria-label="...">
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-default" ng-click="vm.removeOnMatch({cardId: 4})">Four of Spades</button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-default" ng-click="vm.removeOnMatch({isFace:true})">All Face Cards</button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-default" ng-click="vm.removeOnMatch({suitOrder:5, suitColor: 'Red' })">Five of Diamonds / Hearts</button>
        </div>
    </div>

</div>

<div class="row-fluid TopCushion" style="background: lime;">
    <div class="col-xs-1 Cards" ng-repeat="item in vm.deck">
        <img ng-src="~/Content/ImagesCards/{{item.image}}" class="img-responsive" />
    </div>
</div>