<h2>{{vm.header2}}</h2>

<div class="row-fluid TopCushion">

    <div class="btn-group btn-group-justified" role="group" aria-label="...">
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-default" ng-click="vm.isInState('MN')">People who live in MN</button>
      </div>
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-default" ng-click="vm.isInState('AL')">People who live in AL</button>
      </div>
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-default" ng-click="vm.hasPhoneNumber('123.123.1234')">The Phone number 123.123.1234</button>
      </div>
    </div>

</div>

<div class="row-fluid TopCushion">
    <alert ng-repeat="alert in alerts" type="{{alert.type}}" close="vm.closeAlert($index)">{{alert.msg}}</alert>
</div>

